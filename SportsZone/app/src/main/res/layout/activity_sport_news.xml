<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FC"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest Sports News"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#3E50B4"
            android:layout_marginBottom="16dp"/>

        <!-- News Card 1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvNews1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soccer Star Scores Hat-Trick in Last Match"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"/>

                <TextView
                    android:id="@+id/tvNews1Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In a thrilling match last night, the soccer star scored a hat-trick, leading his team to victory."
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- News Card 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvNews2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Basketball Championship Next Week"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"/>

                <TextView
                    android:id="@+id/tvNews2Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The basketball championship is set to take place next week with teams from across the country."
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- News Card 3 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvNews3Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tennis Star Wins Grand Slam Title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"/>

                <TextView
                    android:id="@+id/tvNews3Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In a stunning finale, the tennis star clinched the Grand Slam title, marking a significant milestone."
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- News Card 4 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="16dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvNews4Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upcoming Marathon: Register Now!"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722"/>

                <TextView
                    android:id="@+id/tvNews4Content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The upcoming marathon is just around the corner. Registration is open for all participants."
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView>
