<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/selectedItemImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="Selected Product Image"
        android:scaleType="centerCrop"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/selectedItemTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/selectedItemPriceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="8dp" />

    <CheckBox
        android:id="@+id/extraWarrantyCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Extra Warranty (₱100)" />

    <CheckBox
        android:id="@+id/giftWrapCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Gift Wrap (₱50)" />

    <Button
        android:id="@+id/proceedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed to Checkout"
        android:backgroundTint="@color/button_color"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp" />
</LinearLayout>
